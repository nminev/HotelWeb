@model List<OffersViewModel>

<div class="product-grid">
    <div class="item-grid">
        @foreach (var item in Model)
        {

            <div class="item-box">
                <div class="product-item">
                    <div class="picture">
                        <a asp-area="" asp-controller="Home" asp-action="Offer" asp-route-id="@item.ID">
                            <img src="https://picsum.photos/200/300" alt="Product">
                        </a>
                    </div>
                    <div class="details">
                        <div class="product-title">@item.Name</div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
